<%= form_with(model: @post, local: true) do |form| %>

  <% if @post.errors.present? %>
    <p class="form-errors">
      <%= @post.errors.full_messages.join(", ") %>
    </p>
  <% end %>

  <div>
    <%= form.label :title %> <br />
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %> <br />
    <%= form.text_area :body, cols: 50, rows: 5 %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
  



<% end %>